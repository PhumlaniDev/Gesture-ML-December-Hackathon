{{> header.handlebars}}

<div class="container">
    <h1></h1>
    <div>

        <div>
            <div id="position-yourself" class="mb-3">1. Align yourself with device camera</div>
        </div>

        <div class="controls">
            <h1 class="question gesture mb-3"></h1>
        </div>
        <div class="controls mb-3">
            <h1 id="question" class="question"></h1>
        </div>
        <div class="row">
            <div id="correct-toggle" class=" col-lg-10 offset-lg-1 card text-white bg-success my-3 mx-auto p-5"
                 style="max-width: 18rem;">
                <div id="correct-toggle-header">
                    <h1 class="p-4">Correct!</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div id="incorrect-toggle" class="col-lg-10 offset-lg-1  card text-white bg-danger my-3 mx-auto p-5"
                 style="max-width: 18rem;">
                <div id="incorrect-toggle-header">
                    <h1 class="p-4">Incorrect!</h1>
                </div>
            </div>
        </div>


        <div class="controls">

            <div id="box" class="mb-2">
                <canvas id="canvas">
                    <div id="webcam-container"></div>
                </canvas>
            </div>

            <!--            <div id="label-container"></div>-->

            <div class="controls mb-2 text-center">
                <button id="start-button" type="button" class="start btn btn-success mx-auto">Start</button>
                <button id="stop" type="button" class="stop btn btn-danger mx-auto">Stop</button>
                <button id="restart" type="button" class="restart btn btn-primary mx-auto">Restart</button>
            </div>

        </div>


    </div>

</div>
<div class="container text-center">
    <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@1.3.1/dist/tf.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@teachablemachine/pose@0.8/dist/teachablemachine-pose.min.js"></script>
    <script src="/js/model.js"></script>
</div>
{{> footer.handlebars}}